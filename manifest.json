{
    "manifest_version": 3,
    "name": "Amazon Text Changer",
    "version": "1.0",
    "description": "Change text on Amazon.com and display in popup",
    "icons": {
        "48": "icon48.png"
    },
    "permissions": [
       
        "activeTab"
    ],
    "action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://www.amazon.in/*"],
            "js": ["content.js"]
        }
    ],
    "host_permissions":[
        "https://www.amazon.in/"
    ]
}
